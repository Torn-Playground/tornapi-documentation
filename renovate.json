{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", ":disableDependencyDashboard", ":automergeMinor", ":prHourlyLimit1"],
    "rangeStrategy": "bump",
    "platformAutomerge": true,
    "ignoreDeps": ["daisyui", "tailwindcss"],
    "constraints": {
        "node": "^24"
    },
    "packageRules": [
        {
            "matchPackageNames": ["@biomejs/biome"],
            "automerge": false
        }
    ]
}
