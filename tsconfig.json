{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@uiw/react-json-view/githubLight": ["node_modules/@uiw/react-json-view/cjs/theme/github.light.d.ts"],
            "@uiw/react-json-view/nord": ["node_modules/@uiw/react-json-view/cjs/theme/nord.d.ts"],
        },
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "*.cjs"],
    "exclude": ["node_modules"]
}
